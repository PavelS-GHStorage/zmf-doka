.nav-mobile
	display none
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	padding-top 45px
	background-color #272524
	z-index 15
	@media $tPortrait
		display none !important
	&__scroll
		height 100%
		overflow-y auto
	&__back-btn
		position absolute
		padding-left 20px
		left 16px
		top 5px
		height 34px
		color grey
		font-size 10px
		font-weight 300
		line-height 34px
		opacity 0
		transition opacity $duration
		z-index 1
		&.show
			opacity 1
		&:before
			@extend .psElem
			position absolute
			left 0
			top 12px
			width 12px
			height 10px
			background url('data:image/png;base64,') no-repeat center
	&__close-btn
		display block
		position absolute
		top 4px
		right 4px
		width 34px
		height 34px
		padding 0
		background url('data:image/png;base64,') no-repeat center
		z-index 1
	&__list-item
		display flex
		align-items center
		position relative
		border-top 1px solid #2E2D29
		a[href*='tel']
			padding 11px 13px 9px
			font-size 14px
		address
			display block
			color grey
			font-size 12px
			line-height 16px
			font-weight 400
			padding 10px 16px 9px 12px
		span
			display block
		&--phone, &--address
			padding-left 24px
			&:before
				content ''
				display block
				position absolute
				background-repeat no-repeat
				background-position center
				z-index 1
		&--phone
			&:before
				top 13px
				left 15px
				width 12px
				height 12px
				background-image url('data:image/png;base64,')
		&--address
			&:before
				top 12px
				left 15px
				width 8px
				height 12px
				background-image url('data:image/png;base64,')
	&__list-btn
		display block
		flex-shrink 0
		width 36px
		height 36px
		margin-left auto
		padding 0
		background url('data:image/png;base64,') no-repeat center
	&__list-href
		display block
		width 100%
		color grey
		font-size 12px
		font-weight 400
		line-height 16px
		padding 10px 15px 9px
	&__sublist
		position fixed
		width 100%
		left 100%
		top 45px
		bottom 0
		background-color #272524
		transition left .5s
		z-index 2
		&.show
			left 0
	&__sublist-item
		border-top 1px solid #2E2D29
		&:last-child
			border-bottom 1px solid #2E2D29
	&__sublist-href
		display inline-block
		vertical-align top
		color grey
		font-size 12px
		font-weight 400
		line-height 16px
		padding 10px 15px 9px
	&__bottom
		& ^[0]__list
			margin-bottom 14px
			border-bottom 1px solid #2E2D29

	.social
		margin-left 16px
		@media $mPortraitIphone6Max
			justify-content center
			margin-left 0
		&__item
			@media $mPortraitIphone6Max
				margin-right 32px
			&:last-child
				@media $mPortraitIphone6Max
					margin-right 0
