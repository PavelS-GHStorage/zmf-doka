.pagination
	display flex
	align-items center
	gap 8px
	&__input
		display block
		width 50px
		height 32px
		text-align center
		color #7b7b7b
		font-size 14px
		line-height 30px
		font-weight 600
		border 1px solid #d6d6d6
		border-radius 4px
	&__count
		color #7b7b7b
		font-size 14px
		line-height 16px
		font-weight bold
	&__buttons
		display flex
	&__button
		display flex
		width 28px
		height 32px
		background-color #e7e7e7
		&:after
			@extend .psElem
			width 7px
			height 13px
			margin auto
			background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAcAAAANBAMAAACX52mGAAAAJFBMVEUAAAA2NjY2NjY2NjY2NjY2NjY2NjY2NjY2NjY2NjY2NjY2NjbZSh6AAAAAC3RSTlMAv7rG8szC+NOyrEz2qqQAAAAySURBVAjXY3BmAIJuASDBuBHElEYwZysACfYNQGI1UJBpM5ChnQBkbAMyog2AhCsQAwDrkQdjEC60uwAAAABJRU5ErkJggg==') no-repeat center
		&--prev
			border-top-left-radius 5px
			border-bottom-left-radius 5px
			&:after
				transform scaleX(-1)
		&--next
			border-top-right-radius 5px
			border-bottom-right-radius 5px
		&--disabled
			opacity .5
			cursor default
			pointer-events none
			&:after
				opacity .7
