.section-methodology
	padding-top 32px
	padding-bottom 50px
	background-color #fbfbfb
	&__container
		@extend .container
	&__title
		margin-bottom 39px
	&__items
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-column-gap 24px
		grid-row-gap 70px
	&__item-card
		display flex
		flex-direction column
		justify-content flex-start
	&__item-card-overimg
		display flex
		width 100%
		height 244px
		margin-bottom 16px
		background-color #efefef
		border-radius 16px
	&__item-card-img
		max-width 100%
		max-hight 100%
		margin auto
	&__item-card-title
		margin-bottom 16px
		color #404040
		font-size 18px
		line-height 22px
		font-weight 600
	&__item-card-text
		color #777
		font-size 16px
		line-height 19px
	&__bottom
		display flex
		justify-content center
		margin-top 45px

