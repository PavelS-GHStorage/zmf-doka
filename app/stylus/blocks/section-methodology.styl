.section-methodology
	padding-top 48px
	padding-bottom 50px
	background-color #fbfbfb
	&__container
		@extend .container
	&__title
		margin-bottom 32px
	&__items
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-template-rows auto
		grid-column-gap 24px
		grid-row-gap 64px
	// &__item
	&__item-card
		display flex
		flex-direction column
		justify-content flex-start
	&__item-card-overimg
		display flex
		width 100%
		height 244px
		margin-bottom 20px
		background-color #efefef
		border-radius 16px
	&__item-card-img
		max-width 100%
		max-hight 100%
		margin auto
	&__item-card-title
		margin-bottom 20px
		color #404040
		font-size 18px
		line-height 20px
		font-weight 600
	&__item-card-text
		color #777777
		font-size 16px
		line-height 18px
	&__bottom
		display flex
		justify-content center
		margin-top 42px
