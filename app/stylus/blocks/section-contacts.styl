.section-contacts
	padding-top 52px
	padding-bottom 50px
	@media $desktopMax
		padding-top 42px
		padding-bottom 26px
	@media $mLandscapeMax
		padding-top 34px
		padding-bottom 38px
	&__container
		@extend .container
	&__title
		margin-bottom 18px
		@media $desktopMax
			margin-bottom 24px
		@media $mLandscapeMax
			margin-bottom 14px
	&__text
		margin-bottom 48px
		@media $desktopMax
			margin-bottom 32px
		@media $mLandscapeMax
			margin-bottom 23px
	&__tabs
		min-height 778px
		@media $tPortraitMax
			min-height 940px
	&__tabs-controls
		display flex
		gap 12px
		margin-bottom 50px
		@media $mLandscapeMax
			margin-bottom 18px
			padding-bottom 4px
			overflow auto hidden
		@media $mPortraitMax
			gap 8px
	&__tabs-controls-btn
		display block
		padding 16px 38px 15px
		font-size 16px
		line-height 18px
		font-weight normal
		text-transform none
		letter-spacing .025em
		border-radius 25px
		@media $mLandscapeMax
			padding 9px 18px
			font-size 12px
			line-height 14px
			border-radius 16px
		span
			display block
			color #262626
			border-bottom 1px solid #262626
			transition color $duration, border $duration
			pointer-events none
		&:hover,
		&.active
			background-color $accent
			span
				color $white
				border-bottom-color transparent
	&__tabs-items
		position relative
	&__tabs-item
		position absolute
		top 0
		left 0
		width 100%
		opacity 0
		visibility hidden
		transition all .3s
		&.active
			position relative
			opacity 1
			visibility visible
	&__items
		display grid
		grid-template-columns repeat(4, 1fr)
		grid-template-rows auto
		gap 32px 24px
		width 100%
		@media $tPortraitMax
			grid-template-columns repeat(2, 1fr)
		@media $mLandscapeMax
			gap 12px 24px
			grid-template-columns auto
	&__item
		display flex
		position relative
		@media $mLandscapeMax
			padding-bottom 15px
			&:after
				@extend .psElem
				position absolute
				width 100vw
				height 1px
				left 50%
				bottom 0
				transform translateX(-50%)
				background-color $border-gray
		&:last-child
			@media $mLandscapeMax
				padding-bottom 0
				&:after
					content none
					display none
		&:hover
			@media $desktop
				& ^[0]__item-ico
					filter grayscale(100%)
					opacity .35
	&__item-overico
		width 55px
		margin-right 17px
		flex-shrink 0
		@media $mLandscapeMax
			width 50px
			margin-right 15px
	&__item-ico
		display flex
		justify-content center
		filter grayscale(0%)
		transition filter $duration, opacity $duration
		max-height 100%
	&__item-info
		max-width 231px
		@media $mLandscapeMax
			max-width 100%
	&__item-label,
	&__item-data
		/ .MSIE &
			max-width 231px
	&__item-label
		display block
		margin-bottom 9px
		color #c5c5c5
		font-size 12px
		font-weight 300
		line-height 14px
		@media $mLandscapeMax
			margin-bottom 5px
	&__item-data
		display flex
		flex-direction column
		align-items flex-start
		color $default
		font-size 16px
		line-height 20px
		@media $mLandscapeMax
			font-size 14px
			line-height 17px
		address, p
			width 100%
			display block
		a
			color $default
	&__item-data-subtext
		color #a6a6a6
		font-size 10px
		line-height 12px
		font-style italic
		@media $mLandscapeMax
			margin-top 2px
			font-size 9px
			line-height 11px
	&__map
		height 459px
		margin-top 52px
		margin-bottom 54px
		@media $mLandscapeMax
			margin-top 30px
			margin-bottom 30px
	&--page
		padding-top 7px
