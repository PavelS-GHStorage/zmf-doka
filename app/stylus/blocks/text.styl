.text
	color $default

	h1:not([class])
		font-size 36px
		line-height 48px
		font-weight 600
		margin-bottom 21px
		@media $tPortraitMax
			font-size 32px
			line-height 38px
		@media $mLandscapeMax
			font-size 20px
			line-height 24px

	h2:not([class])
		font-size 36px
		line-height 42px
		font-weight 600
		margin-bottom 21px
		@media $tPortraitMax
			font-size 24px
			line-height 30px
		@media $mLandscapeMax
			font-size 20px
			line-height 24px

	h3:not([class])
		font-size 30px
		line-height 36px
		font-weight 600
		margin-bottom 21px
		@media $tPortraitMax
			font-size 20px
			line-height 24px

	h4:not([class])
		font-size 24px
		line-height 27px
		font-weight 600
		margin-bottom 21px
		@media $mLandscapeMax
			font-size 14px
			line-height 17px

	h5:not([class])
		font-size 18px
		line-height 22px
		font-weight 600
		margin-bottom 21px
		@media $mLandscapeMax
			font-size 14px
			line-height 17px

	img:not([class])
		margin 20px 0 24px

	p:not([class])
		color $gray
		font-size 16px
		line-height 19px
		margin-bottom 19px
		@media $mLandscapeMax
			font-size 14px
			line-height 17px

		& + p
			margin-top 19px

	a
		&:not([class])
			font-size 16px
			line-height 19px
			color $accent
			border-bottom 1px solid $accent
			transition border $duration
			@media $mLandscapeMax
				font-size 14px
				line-height 17px
		&:not([class])
			&:hover
				border-bottom-color transparent

	ol:not([class]), ul:not([class])
		list-style none
		margin 20px 0 21px
		li
			color $gray
			position relative
			font-size 16px
			line-height 19px
			@media $mLandscapeMax
				font-size 14px
				line-height 17px

	ol:not([class])
		counter-reset myCounter
		& > li
			margin-bottom 19px
			&:before
				counter-increment myCounter
				content counters(myCounter,".")"."
				display inline-block
				vertical-align baseline
				min-width 12px
				padding-right 4px
				color $accent
				font-size 16px
				line-height 19px
				font-weight 600
				@media $mLandscapeMax
					font-size 14px
					line-height 17px

		ol:not([class]),
		ul:not([class])
			margin-top 19px !important
			margin-left 20px !important

	ul:not([class])
		& > li
			padding-left 25px
			margin-bottom 11px
			&:before
				content ''
				position absolute
				display block
				left 0
				top 7px
				width 4px
				height 4px
				border-radius 50%
				border 2px solid $border-gray

		ul:not([class]),
		ol:not([class])
			margin-top 19px !important

	blockquote:not([class])
		margin 20px 0
		padding 22px 22px 28px 31px
		color $default
		font-size 16px
		line-height 19px
		border-left 3px solid $accent
		background-color $border-gray
		@media $mLandscapeMax
			font-size 14px
			line-height 17px
			padding 15px 15px 15px 20px

	table:not([class])
		margin 25px 0 30px
		max-width 100%
		th
			padding 19px 17px 17px 17px
			font-size 16px
			line-height 19px
			color $gray
			background-color $border-gray
			@media $mLandscapeMax
				font-size 14px
				line-height 17px
		tr
			position relative
			text-align left
			font-size 16px
			line-height 19px
			@media $mLandscapeMax
				font-size 14px
				line-height 17px
			td
				padding 19px 17px 17px 17px
				color $gray
				font-size 16px
				line-height 19px
				vertical-align top
				position relative
				border-bottom 1px solid $border-gray
				@media $mLandscapeMax
					font-size 14px
					line-height 17px

	.table-wrap
		width 100%
		padding-bottom 5px
		overflow-x auto
		table
			min-width 728px

	b, strong
		font-weight 600

	i, em
		font-style italic

	*
		&:not([class]):first-child
			margin-top 0
		&:not([class]):last-child
			margin-bottom 0

	& + .main__row
		margin-top 50px

	&--align-center
		text-align center

	&--agreement
		p:not([class]),
		a:not([class]),
		ol:not([class]) li,
		ol:not([class]) > li:before,
		ul:not([class]) li,
		table:not([class]) td,
		table:not([class]) th
			font-size 18px
			line-height 22px
			@media $mLandscapeMax
				font-size 16px
				line-height 19px
	
	& + .section-promotions
		margin-top 40px
		padding 40px 0 0
		border-top 1px solid $border-gray
		@media $mLandscapeMax
			margin-top 35px
			padding-top 35px

.ya-share2
	.ya-share2__container_size_m
		.ya-share2__item
			margin 0 5px 0 0
			.ya-share2__badge
				border-radius 14px
			.ya-share2__icon
				height 28px
				width 28px
				background-position center
				background-repeat no-repeat
			&.ya-share2__item_service_vkontakte
				.ya-share2__icon
					background-size 24px 24px
			&.ya-share2__item_service_facebook
				.ya-share2__icon
					background-size 18px 22px
			&.ya-share2__item_service_odnoklassniki
				.ya-share2__icon
					background-size 24px 24px
			&.ya-share2__item_service_moimir
				.ya-share2__icon
					background-size 24px 24px
			&.ya-share2__item_service_twitter
				.ya-share2__icon
					background-size 20px 24px
			&.ya-share2__item_service_viber
				.ya-share2__icon
					background-size 20px 24px
			&.ya-share2__item_service_whatsapp
				.ya-share2__icon
					background-size 22px 24px
