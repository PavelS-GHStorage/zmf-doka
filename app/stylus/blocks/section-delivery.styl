.section-delivery
	padding-top 48px
	padding-bottom 50px
	background-color #fbfbfb
	&__container
		@extend .container
	&__title
		margin-bottom 32px
	&__text
		margin-bottom 32px
	&__grid
		display grid
		grid-template-columns 500px minmax(990px, 1fr)
		justify-content space-between
		grid-column-gap 48px
		width 100%
	&__items
		display flex
		flex-direction column
		gap 24px
	&__item
		display flex
		justify-content space-between
		gap 24px
		width 100%
	&__item-overico
		width 50px
		flex-shrink 0
	&__item-ico
		max-width 100%
	&__item-title
		margin-bottom 10px
		color #222222
		font-size 18px
		line-height 24px
		font-weight 600
	&__item-text
		color #767676
		font-size 16px
		line-height 24px
		strong
			color $accent
		ul
			li
				position relative
				padding-left 24px
				&:before
					content ''
					display block
					position absolute
					top 10px
					left 4px
					width 3px 
					height 3px
					background-color $accent
					border-radius 3px
				strong
					color #767676
