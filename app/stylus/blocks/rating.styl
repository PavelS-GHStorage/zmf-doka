.rating
	display inline-block
	vertical-align baseline
	position relative
	width 106px
	height 19px
	user-select none
	overflow hidden
	&:before
		@extend .psElem
		position absolute
		left 0
		top 0
		right 0
		bottom 0
		background url('data:image/png;base64,') no-repeat left center
		z-index 1
	&__ind
		position absolute
		left 0
		top 0
		height 100%
		background-color #ffcd06
		transition width $duration
		z-index -1
