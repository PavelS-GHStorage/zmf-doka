.section-social
	padding-top 52px
	padding-bottom 48px
	&__container
		@extend .container
	&__grid
		display grid
		justify-content space-between
		gap 24px
	&__title
		margin-bottom 32px
		color #262626
		font-size 16px
		line-height 24px
		strong
			font-size 23px
			font-weight 600
	&__btn
		display block
		width 310px
		height 74px
		margin-bottom 16px
		font-size 0
		color transparent
		background-repeat no-repeat
		background-size contain
		background-position left top
		&--youtube
			background-image url('../images/btn-ytb.png')
		&--vk
			background-image url('../images/btn-vk.png')
	&__text
		color #ababab
		font-size 12px
		line-height 14px
	&__gallery-items
		display grid
		width 100%
	&__gallery-photo
		display block
		position relative
		width 100%
		padding-top 61.50%
		background-repeat no-repeat
		background-position center
		background-size cover
		border-radius 10px
		overflow hidden
		&:hover
			&:before
				opacity 0
		&:before
			@extend .psElem
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba(#000, .4)
			transition opacity $duration
			z-index 1
	&__gallery-card
		width 100%
	&__gallery-card-video
		display block
		position relative
		width 100%
		margin-bottom 11px
		padding-top 56.95%
		background-repeat no-repeat
		background-position center
		background-size cover
		border-radius 10px
		overflow hidden
		&:hover
			&:before
				opacity 0
		&:before
			@extend .psElem
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba(#000, .4)
			transition opacity $duration
			z-index 1
		span
			display block
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			width 68px
			height 48px
			background url('data:image/png;base64,') no-repeat center
			background-size contain
			z-index 2
	&__gallery-card-title
		display block
		color #262626
		font-size 14px
		line-height 17px
		font-weight 600
		margin-bottom 14px
	&__gallery-card-props
		display flex
		flex-wrap wrap
		gap 6px
		width 100%
	&__gallery-card-prop
		display block
		position relative
		padding-right 8px
		color #777777
		font-size 11px
		line-height 13px
		&:last-child
			padding-right 0
			&:after
				content none
		&:after
			@extend .psElem
			position absolute
			right 0
			top 4px
			width 3px
			height 3px
			border-radius 3px
			background-color #777777
	&--youtube
		& ^[0]__grid
			grid-template-columns 314px minmax(auto, 640px)
			grid-template-rows auto
		& ^[0]__gallery-items
			grid-template-columns repeat(2, 1fr)
			grid-template-rows auto
			gap 24px
	&--vk
		& ^[0]__grid
			grid-template-columns 340px minmax(auto, 640px)
			grid-template-rows auto
		& ^[0]__gallery-items
			grid-template-columns repeat(3, 1fr)
			grid-template-rows auto
			gap 12px
	&--reverse
		& ^[0]__grid
			grid-auto-flow dense
			direction rtl
		& ^[0]__col--head
			text-align left
		& ^[0]__btn
			margin-right auto
