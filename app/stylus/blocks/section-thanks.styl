.section-thanks
	padding-top 9px
	padding-bottom 70px
	&__container
		@extend .container
	&__title
		margin-bottom 7px
		color $default
		font-size 60px
		line-height 85px
		font-weight 700
		text-transform uppercase
	&__text
		margin-bottom 21px
		color #818181
		font-size 18px
		line-height 22px
		font-weight 400
	// &__info
	&__info-text
		margin-bottom 10px
		color #818181
		font-size 18px
		line-height 22px
		font-weight 400
	&__info-phone
		display inline-flex
		align-items center
		column-gap 12px
		margin-bottom 3px
		color $default
		font-size 24px
		line-height 27px
		font-weight 600
		&:before
			@extend .psElem
			flex-shrink 0
			width 11px
			height 17px
			background url('data:image/png;base64,') no-repeat center
	&__info-subtext
		color #78766f
		font-size 10px
		line-height 12px
		font-style italic
