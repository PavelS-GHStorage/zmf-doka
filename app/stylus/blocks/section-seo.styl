.section-seo
	padding-top 43px
	padding-bottom 48px
	background-color #fbfbfb
	@media $desktopMax
		padding-top 38px
		padding-bottom 50px
	@media $mLandscapeMax
		padding-top 24px
		padding-bottom 34px
	&__container
		@extend .container
	&__slider
		.swiper-container
			padding 0 66px
			@media $mLandscapeMax
				padding-left 30px
				padding-right 30px
		.swiper-horizontal
			padding 0
		.swiper-button-prev
			@media $desktopMax
				left 0
		.swiper-button-next
			@media $desktopMax
				right 0
	&__item
		max-width 375px
	&__item-title
		color $default
		font-size 20px
		font-weight 600
		line-height 24px
		margin-bottom 14px
	&__item-text
		color $gray
		font-size 14px
		line-height 17px
		p
			margin-bottom 17px
			&:last-child
				margin-bottom 0
		a
			color $accent
			border-bottom 1px solid $accent
			transition border $duration
			&:hover
				border-bottom-color transparent
