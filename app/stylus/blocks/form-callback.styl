.form-callback
	display flex
	flex-direction column
	width 100%
	row-gap 24px
	&__row
		display grid
		grid-template-columns repeat(2, 1fr)
		grid-template-rows auto
		gap 24px
	&__field
		&.error
			& ^[0]__field-input
				border-color $red
	&__field-label,
	&__field-input
		display block
	&__field-label
		margin-bottom 6px
		color #767676
		font-size 12px
		line-height 14px
		padding-left 30px
		span
			color $red
	&__field-input
		width 100%
		height 60px
		padding 18px 30px
		color #767676
		font-size 16px
		line-height 24px
		font-weight 500
		border-radius 30px
		background-color #efefef
		border 1px solid transparent
		transition border $duration
		&:active
			outline none
	&__submit-btn
		width 100%
		padding-left 30px
		padding-right 30px
	&__agreement
		margin-top 6px
		padding-left 30px
		color #bab9b9
		font-size 10px
		line-height 12px
		a
			color #bab9b9
			border-bottom 1px solid #bab9b9
			transition border $duration
			&:hover
				border-bottom-color transparent
		&:first-child
			margin-top 0
	&--default,
	&--popup
		& ^[0]__field
			&--user,
			&--phone
				position relative
				&:after
					@extend .psElem
					right 30px
					position absolute
					background-repeat no-repeat
					background-position center
					transition background $duration
					pointer-events none
					z-index 1
				& ^[0]__field-input
					padding-right 50px
			&--user
				&:after
					width 12px
					height 14px
					bottom 23px
					background-image url('data:image/png;base64,')
			&--phone
				&:after
					width 15px
					height 15px
					bottom 22px
					background-image url('data:image/png;base64,')
			&.error
				&.form-callback__field--user
					&:after
						background-image url('data:image/png;base64,')
				&.form-callback__field--phone
					&:after
						background-image url('data:image/png;base64,')
				& ^[0]__field-warning
					opacity 1
					visibility visible
		& ^[0]__field-label
			color $default
			font-size 14px
			line-height 17px
			font-weight 500
		& ^[0]__field-input
			background-color #fff
			border 1px solid #d8d8d8
			transition border $duration
			&:focus,
			&.not-empty
				border-color $default
		& ^[0]__field-warning
			position absolute
			top 2px
			right 0
			padding-right 30px
			color $red
			font-size 12px
			line-height 14px
			text-align right
			pointer-events none
			opacity 0
			visibility hidden
			transition opacity $duration, visibility $duration
			z-index 1
		& ^[0]__agreement
			padding-left 0
			text-align center
	&--default
		row-gap 8px
		& ^[0]__row
			align-items flex-end
			grid-template-columns repeat(3, 1fr)
		& ^[0]__agreement
			margin-top 0
	&--popup
		row-gap 29px
		text-align left
		& ^[0]__row
			display block
		& ^[0]__submit-btn
			font-size 14px
			background-color #ffa800
		& ^[0]__agreement
			margin-top 13px
			color #767676
			font-size 12px
			line-height 14px
			a
				color #767676
				font-weight 600
