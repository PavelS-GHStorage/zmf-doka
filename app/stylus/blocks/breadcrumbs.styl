.breadcrumbs
	padding 31px 0 19px
	@media $mPortraitMax
		padding 15px 0 10px
	&--gray
		background-color #f8f8f8
	&__list
		font-size 0
		line-height 0
	&__item
		display inline-block
		vertical-align top
		position relative
		margin-right 7px
		padding-right 11px
		margin-bottom 5px
		&:last-child
			&:before
				display none
				content none
		&:before
			content 'â–¶'
			display block
			position absolute
			right -2px
			top 0
			color rgba(#686662, .5)
			font-size 12px
			font-weight 400
			line-height 14px
	&__link
		display inline-block
		vertical-align top
		color #686662
		font-size 12px
		font-weight 400
		line-height 14px
		&[href]
			border-bottom 1px solid rgba(#686662, .5)
			transition border $duration
			&:hover
				border-bottom-color transparent
