.common-info
	display grid
	grid-template-columns 1fr minmax(224px, auto)
	grid-template-rows auto
	grid-column-gap 24px
	width 100%
	margin-bottom 36px
	padding-top 27px
	padding-bottom 27px
	border-bottom 1px solid $border-gray
	@media $mLandscapeMax
		margin-bottom 30px
		grid-template-columns auto
		gap 20px 0
	&__items
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-template-rows auto
		gap 12px 24px
		@media $tPortraitMax
			grid-template-columns auto
			gap 8px 0
	&__item
		display flex
		flex-direction column
		row-gap 2px
		position relative
		padding-left 27px
		&:before
			@extend .psElem
			position absolute
			left 0
			background-repeat no-repeat
			background-position center
		&--time
			&:before
				top 3px
				width 13px
				height 13px
				background-image url('data:image/png;base64,')
		&--date
			&:before
				top 3px
				width 13px
				height 14px
				background-image url('data:image/png;base64,')
		&--views
			&:before
				top 3px
				width 16px
				height 10px
				background-image url('data:image/png;base64,')
		&--from
			&:before
				top 3px
				width 13px
				height 13px
				background-image url('data:image/png;base64,')
	&__item-label
		color $default
		font-size 14px
		line-height 17px
		font-weight 500
	&__item-data
		color #767676
		font-size 14px
		line-height 17px
		font-weight 400
		a,
		button
			transition border $duration
			&:hover
				border-bottom-color transparent
		a
			color $accent
			font-weight 600
			border-bottom 1px solid $accent
		button
			margin-left 4px
			color $blue
			font-weight 400
			border-bottom 1px solid $blue

	&--promotion
		& ^[0]__items
			max-width 740px
			grid-template-columns 1fr 385px
			@media $tPortraitMax
				max-width 100%
				grid-template-columns auto

