.section-promotions
	padding-top 48px
	padding-bottom 60px
	&__container
		@extend .container
	&__title
		margin-bottom 32px
	&__items
		display grid
		grid-template-columns repeat(2, 1fr)
		gap 24px
	&__item-card
		position relative
		padding 34px 40px
		background-image linear-gradient(0deg, rgb(255,175,48) 0%, rgb(255,184,68) 50%, rgb(255,200,114) 100%)
		background-repeat no-repeat
		background-position 0 0
		background-size cover
		border-radius 10px
		z-index 1
		&--dark
			background-image linear-gradient( 0deg, rgb(49,49,49) 0%, rgb(55,55,55) 49%, rgb(70,70,70) 100%)
	&__item-card-content
		display flex
		flex-direction column
		align-items flex-start
		justify-content flex-start
		gap 32px
		max-width 310px
	&__item-card-title
		color #fff
		font-size 24px
		font-weight 500
		line-height 27px
	&__item-card-text
		color #fff
		font-size 13px
		line-height 17px
	&__item-card-overimg
		display flex
		justify-content flex-end
		align-items flex-end
		position absolute
		height 100%
		right 0
		bottom 0
		overflow hidden
		pointer-events none
		z-index -1
	&__item-card-img
		max-width 100%
		max-height 100%
		object-fit contain
