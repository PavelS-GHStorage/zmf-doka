.section-objects
	padding-top 42px
	padding-bottom 60px
	background-color #fbfbfb
	@media $mLandscapeMax
		padding-top 36px
		padding-bottom 40px
	&__container
		@extend .container
	&__title
		margin-bottom 28px
		@media $mLandscapeMax
			margin-bottom 12px
	&__text
		margin-bottom 50px
		@media $mLandscapeMax
			margin-bottom 20px
	&__items
		display grid
		grid-template-columns repeat(2, 1fr)
		grid-template-rows repeat(2, 1fr)
		gap 24px
		@media $tPortraitMax
			display block
	&__item
		@media $tPortraitMax
			margin-bottom 24px
		@media $mLandscapeMax
			margin-bottom 12px
		&:last-child
			margin-bottom 0
		&:nth-child(2)
			grid-area 1 / 2 / 2 / 3
		&:nth-child(3)
			grid-area 2 / 2 / 3 / 3
		&--big
			grid-area 1 / 1 / 3 / 2
			& ^[0]__item-card
				padding-top 100%
				@media $tPortraitMax
					padding-top 0
			& ^[0]__item-card-content
				padding-bottom 48px
				@media $desktopMax
					padding-bottom 32px
				@media $mLandscapeMax
					padding-bottom 20px
			& ^[0]__item-card-title
				font-size 36px
				line-height 42px
				@media $desktopMax
					font-size 30px
					line-height 36px
				@media $tPortraitMax
					font-size 24px
					line-height 30px
				@media $mLandscapeMax
					font-size 20px
					line-height 24px
			& ^[0]__item-card-bottom
				flex-direction column-reverse
				justify-content flex-start
				align-items flex-start
				gap 16px
				@media $tPortraitMax
					flex-direction row
					justify-content space-between
					align-items flex-end
				@media $mPortraitMax
					flex-direction column-reverse
					justify-content flex-start
					align-items flex-start
					row-gap 4px
			& ^[0]__item-card-price
				margin-bottom 0
				strong
					font-size 36px
					line-height 36px
					@media $tPortraitMax
						font-size 30px
						line-height 30px
					@media $mLandscapeMax
						font-size 20px
						line-height 24px
	&__item-card
		display block
		position relative
		width 100%
		padding-top calc(50% - 12px)
		background-size cover
		background-repeat no-repeat
		background-position center
		border-radius 7px
		overflow hidden
		z-index 1
		@media $tPortraitMax
			height 286px
			padding-top 0
		@media $mLandscapeMax
			border-radius 10px
		&:before
			@extend .psElem
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			opacity 0.5
			background-image linear-gradient(56deg, rgba(0, 0, 0, 1), rgba(255, 255, 255, 0))
			z-index -1
	&__item-card-content
		display flex
		flex-direction column
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		padding 42px 44px 40px 47px
		z-index 1
		@media $desktopMax
			padding 32px
		@media $mLandscapeMax
			padding 20px
	&__item-card-top
		display flex
		align-items flex-start
		justify-content space-between
	&__item-card-title
		color $white
		font-size 30px
		line-height 36px
		font-weight 600
		@media $desktopMax
			font-size 24px
			line-height 30px
		@media $mLandscapeMax
			font-size 20px
			line-height 24px
		br
			@media $tPortraitMax
				display none
	&__item-card-count
		padding 12px 19px
		flex-shrink 0
		margin-top 5px
		margin-left 24px
		color $default
		font-size 14px
		line-height 14px
		background-color $white
		border-radius 18px
		@media $mLandscapeMax
			padding 7px 11px
			font-size 10px
			line-height 10px
		strong
			font-weight bold
	&__item-card-bottom
		display flex
		justify-content space-between
		align-items flex-end
		margin-top auto
		@media $mPortraitMax
			flex-direction column-reverse
			justify-content flex-start
			align-items flex-start
			row-gap 4px
	&__item-card-price
		color $white
		font-size 16px
		line-height 16px
		margin-bottom -4px
		@media $mLandscapeMax
			margin-bottom 0
			font-size 12px
			line-height 24px
		strong
			margin-left 8px
			margin-right 8px
			font-size 30px
			line-height 30px
			font-weight bold
			@media $mLandscapeMax
				font-size 20px
				line-height 24px
	&__item-card-button
		display block
		padding 23px 53px 25px
		color $white
		font-size 13px
		line-height 16px
		font-weight 500
		text-transform uppercase
		border-radius 32px
		background-color #ffa800
		transition background $duration
		@media $desktopMax
			padding 16px 24px
		@media $mLandscapeMax
			padding 17px 28px
			font-size 11px
			line-height 13px
		&:hover
			background-color #eb9b00
