.section-actions
	padding 60px 0
	&__container
		@extend .container
	&__head
		margin-bottom 32px
	&__all-link
		display inline-block
		vertical-align middle
		flex-shrink 0
		margin-top 15px
		color #767676
		font-size 14px
		line-height 16px
		border-bottom 1px solid #767676
		transition border $duration
		&:hover
			border-bottom-color transparent
	&__items
		display grid
		grid-template-columns repeat(4, 1fr)
		grid-template-rows repeat(2, 1fr)
		gap 24px
	&__item
		&:first-child
			grid-area 1 / 1 / 3 / 3
		&:nth-child(2)
			grid-area 1 / 3 / 1 / 3
		&:nth-child(3)
			grid-area 1 / 4 / 1 / 4
		&:nth-child(4)
			grid-area 2 / 3 / 2 / 5
	&__item-card
		display flex
		align-items flex-end
		position relative
		width 100%
		height 284px
		background-repeat no-repeat
		background-repeat no-repeat
		background-size cover
		border-radius 20px
		overflow hidden
		z-index 1
		&:after
			@extend .psElem
			position absolute
			left 0
			bottom 0
			width 100%
			height 60%
			background-image linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 100%)
			background-repeat no-repeat
			background-position 0 100%
			background-size 100%
			pointer-events none
			z-index -1
		&--big
			height 100%
	&__item-card-content
		display flex
		flex-direction column
		align-items flex-start
		position relative
		width 100%
		padding 24px
		z-index 1
	&__item-card-type
		margin-bottom 21px
		padding 6px 16px
		color #fff
		font-size 12px
		line-height 12px
		background-color #f19100
		border-radius 12px
	&__item-card-title
		display -webkit-box
		-webkit-line-clamp 2
		-webkit-box-orient vertical
		margin-bottom 50px
		color #fff
		font-size 18px
		line-height 24px
		font-weight 500
		overflow hidden
	&__item-card-date
		display block
		color #fff
		font-size 11px
		line-height 13px
