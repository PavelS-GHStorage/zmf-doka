.social
	display flex
	&__item
		flex-shrink 0
		margin-right 15px
		@media $mLandscapeMax
			margin-right 20px
		&:last-child
			margin-right 0
	&__item-href
		display block
		width 39px
		height 39px
		border-radius 50%
		background-repeat no-repeat
		background-position center
		transition background $duration, opacity $duration
		user-select none
		&:hover
			opacity .8
		&--vk
			background-color #507299
			background-image url('data:image/png;base64,')
		&--ytb
			background-color #e62117
			background-image url('data:image/png;base64,')
		&--wsp
			background-color #35b42b
			background-image url('data:image/png;base64,')
		&--tgm
			background-color #70ade0
			background-image url('data:image/png;base64,')
