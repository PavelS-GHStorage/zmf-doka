.common-top
	display flex
	justify-content space-between
	align-items flex-start
	gap 24px
	width 100%
	margin-bottom 32px

.common-bottom
	display flex
	justify-content center
	position relative
	margin-top 50px
	.pagination
		position absolute
		top 20px
		right 0
		z-index 1

.common-title-h2
	font-size 36px
	line-height 42px
	@media $tPortraitMax
		font-size 24px
		line-height 30px
	@media $mLandscapeMax
		font-size 18px
		line-height 22px
	strong
		font-weight 600

.common-title-h3
	color #222222
	font-size 30px
	line-height 36px
	strong
		font-weight 600

.common-subtext
	color #767676
	font-size 24px
	line-height 27px
	a
		color $accent
		border-bottom 1px solid $accent
		transition border $duration
		&:hover
			border-bottom-color transparent

.bg-white
	background-color #fff

.bg-gray
	background-color #fbfbfb
