.video
	&__item
		display block
		position relative
		width 100%
		margin-bottom 30px
		padding-top 50.34%
		background-repeat no-repeat
		background-position center
		background-size cover
		border-radius 10px
		overflow hidden
		&:before,
		&:after
			@extend .psElem
			position absolute
		&:before
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba(#000, .5)
			z-index 1
		&:after
			left 33px
			bottom 28px
			width 1104px
			height 67px
			max-width calc(100% - 60px)
			background url('data:image/png;base64,') no-repeat left bottom
			background-size contain
			z-index 2
		span
			display flex
			position absolute
			top 50%
			left 50%
			transform translate(-50%, calc(-50% - 25px))
			width 130px
			height 130px
			background-color #fff
			border-radius 50%
			box-shadow 0 0 45px rgba(255, 255, 255, 0.25)
			z-index 3
			&:before
				content ''
				display block
				width 30px
				height 34px
				margin auto
				background url('data:image/png;base64,') no-repeat center
				transform translateX(4px)
	&__description
		position relative
		max-width 790px
		padding-left 28px
		color #767676
		font-size 18px
		line-height 30px
		&:before
			@extend .psElem
			position absolute
			left 0
			top 8px
			width 3px
			height calc(100% - 18px)
			background-color $accent
		strong
			color #222222
			font-weight 600
		a
			color $accent
			border-bottom 1px solid $accent
			transition border $duration
			&:hover
				border-bottom-color transparent
	&--delivery
		& ^[0]__item span
			width 110px
			height 110px
