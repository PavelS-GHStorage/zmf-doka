.section-specialists
	padding-top 51px
	padding-bottom 60px
	background-color #fbfbfb
	@media $mLandscapeMax
		padding-top 34px
		padding-bottom 40px
	&__container
		@extend .container
	&__title
		margin-bottom 18px
	&__text
		margin-bottom 56px
		@media $mPortraitMax
			margin-bottom 16px
	&__slider
		.swiper-container
			padding 0 45px
			@media $mLandscapeMax
				padding 0
		.swiper
			&:not(.swiper-initialized)
				& ~ .swiper-button-prev,
				& ~ .swiper-button-next,
				& ~ .swiper-pagination
					display none
				.swiper-wrapper
					@media $mLandscapeMax
						flex-direction column
						row-gap 60px
				.swiper-slide
					@media $mLandscapeMax
						display none
					&:first-child,
					&:nth-child(2)
						display block
					/ ^[0]__slider.show-all &
						display block
		.swiper-button-prev
			@media $desktopMax
				left 0
		.swiper-button-next
			@media $desktopMax
				right 0
	&__item
		display flex
		width 100%
		column-gap 24px
		@media $mPortraitMax
			flex-direction column
			column-gap 0
			row-gap 24px
		@media $mPortraitIphone6Max
			row-gap 14px
	&__item-photo
		width 222px
		height 318px
		flex-shrink 0
		border-radius 24px
		background-repeat no-repeat
		background-position top center
		background-size cover
		@media $desktopMax
			width 208px
			height 298px
		@media $mPortraitIphone6Max
			width 100%
			height auto
			padding-top 110%
	&__item-content
		width 100%
		max-width 260px
		padding-top 8px
		overflow hidden
		@media $desktopMax
			padding-top 0
	&__item-name
		margin-bottom 6px
		color #2f2f2f
		font-size 18px
		line-height 22px
	&__item-position
		margin-bottom 26px
		color #bababa
		font-size 15px
		line-height 18px
		font-weight 500
	&__item-prop
		position relative
		margin-bottom 18px
		z-index 1
		@media $mPortraitIphone6Max
			margin-bottom 13px
		&:last-child
			margin-bottom 0
		&--experience
			& ^[0]__item-prop-title
				&:before
					@extend .psElem
					position absolute
					bottom 0
					left 50%
					width 83px
					height 38px
					background url('data:image/png;base64,') no-repeat center
					background-size contain
					transform translateX(-50%)
		&--projects
			& ^[0]__item-prop-title
				&:before
					@extend .psElem
					position absolute
					top 0
					right 0
					width 13px
					height 13px
					background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAANBAMAAACAxflPAAAAHlBMVEUAAAD6+vr6+vr6+vr6+vr6+vr6+vr6+vr6+vrxkQD0LbEfAAAACHRSTlMA56eUO5s8+TCBcUgAAABKSURBVAjXY2BgUyxUYQACi46ODgMGBuYOIGhmYMjoAAEHBo2OjhkdHQoMEmBagKGjY+bMGR0NMD5c3gOqnhVEtSLMY2BRbASaDwC0YSD5pLrF2AAAAABJRU5ErkJggg==') no-repeat center
					background-size contain
	&__item-prop-info
		display flex
		column-gap 12px
		margin-bottom 18px
		&:last-child
			margin-bottom 0
		@media $desktopMax
			flex-direction column
			column-gap 0
			row-gap 8px
		@media $mLandscapeMax
			flex-direction row
			column-gap 12px
			row-gap 0
	&__item-prop-title
		display flex
		flex-direction column
		align-items center
		flex-shrink 0
		position relative
		width 86px
		text-align center
		color $accent
		font-size 30px
		line-height 30px
		font-weight 600
		span
			color $accent
			font-size 12px
			line-height 12px
			text-transform uppercase
	&__item-prop-data
		color #aaaaaa
		font-size 10px
		line-height 14px
		font-weight 700
		letter-spacing .1em
		text-transform uppercase
	&__item-prop-education
		color #7a7a7a
		font-size 12px
		line-height 14px
		@media $mPortraitMax
			font-size 14px
			line-height 17px
	&__bottom
		display none
		@media $mLandscapeMax
			display flex
