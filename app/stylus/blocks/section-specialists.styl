.section-specialists
	padding-top 48px
	padding-bottom 60px
	background-color #fbfbfb
	&__container
		@extend .container
	&__title
		margin-bottom 32px
	&__text
		margin-bottom 56px
	&__item
		display flex
		width 100%
		column-gap 24px
	&__item-photo
		width 222px
		height 318px
		flex-shrink 0
		border-radius 24px
		background-repeat no-repeat
		background-position center
		background-size cover
	&__item-content
		max-width 260px
	&__item-name
		margin-bottom 6px
		color #2f2f2f
		font-size 18px
		line-height 24px
	&__item-position
		margin-bottom 24px
		font-size 16px
		line-height 19px
		color #bababa
	//&__item-props
	&__item-prop
		position relative
		margin-bottom 12px
		z-index 1
		&--experience
			& ^[0]__item-prop-title
				&:before
					@extend .psElem
					position absolute
					bottom 0
					left 50%
					width 83px
					height 38px
					background url('data:image/png;base64,') no-repeat center
					background-size contain
					transform translateX(-50%)
		&--projects
			& ^[0]__item-prop-title
				&:before
					@extend .psElem
					position absolute
					top 0
					right 0
					width 13px
					height 13px
					background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAANBAMAAACAxflPAAAAHlBMVEUAAAD6+vr6+vr6+vr6+vr6+vr6+vr6+vr6+vrxkQD0LbEfAAAACHRSTlMA56eUO5s8+TCBcUgAAABKSURBVAjXY2BgUyxUYQACi46ODgMGBuYOIGhmYMjoAAEHBo2OjhkdHQoMEmBagKGjY+bMGR0NMD5c3gOqnhVEtSLMY2BRbASaDwC0YSD5pLrF2AAAAABJRU5ErkJggg==') no-repeat center
					background-size contain
	&__item-prop-info
		display flex
		column-gap 12px
		margin-bottom 12px
	&__item-prop-title
		display flex
		flex-direction column
		align-items center
		flex-shrink 0
		position relative
		width 86px
		text-align center
		color $accent
		font-size 30px
		line-height 30px
		font-weight 600
		span
			color $accent
			font-size 12px
			line-height 12px
			text-transform uppercase
	&__item-prop-data
		color #aaaaaa
		font-size 10px
		line-height 14px
		font-weight 600
		letter-spacing .05em
		text-transform uppercase
	&__item-prop-education
		color #7a7a7a
		font-size 12px
		line-height 14px

