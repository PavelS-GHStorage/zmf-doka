.section-history
	padding 60px 0
	@media $mLandscapeMax
		padding-top 32px
		padding-bottom 40px
	&__container
		@extend .container
	&__title
		margin-bottom 18px
		@media $mLandscapeMax
			margin-bottom 12px
	&__text
		margin-bottom 49px
		@media $mLandscapeMax
			margin-bottom 16px
	&__items
		display flex
		flex-direction column
		width 100%
		grid-row-gap 50px
		@media $mLandscapeMax
			grid-row-gap 25px
	&__item
		padding-bottom 29px
		border-bottom 1px solid $border-gray
		@media $mLandscapeMax
			padding-bottom 14px
		@media $mPortraitMax
			display none
		&:first-child,
		&:nth-child(2)
			@media $mPortraitMax
				display block
		/ ^[0]__items.show-all &
			@media $mPortraitMax
				display block
		&:last-child
			padding-bottom 0
			border-bottom none
	&__card
		width 100%
	&__card-top
		display flex
		width 100%
		margin-bottom 10px
		padding-bottom 31px
		border-bottom 1px solid $border-gray
		@media $tPortraitMax
			display block
		@media $mPortraitMax
			margin-bottom 0
			padding-bottom 17px
	&__card-gallery,
	&__card-content
		width 50%
		@media $tPortraitMax
			width 100%
	&__card-gallery
		@media $tPortraitMax
			max-width 580px
			margin-bottom 24px
		@media $mPortraitMax
			margin-bottom 14px
		.swiper-container,
		.swiper
			height 100%
		.swiper
			padding-bottom 0
	&__card-gallery-big
		width 100%
		height 328px
		margin-bottom 8px
		@media $mLandscapeMax
			height 255px
		@media $mPortraitMax
			height 162px
			margin-bottom 6px
		& ^[0]__card-gallery-overimg
			border-radius 16px
		.swiper-button-prev,
		.swiper-button-next
			margin 0
			transform translateY(calc(-50% + 4px))
			@media $mLandscapeMax
				transform translateY(-50%)
	&__card-gallery-overimg
		display flex
		justify-content center
		align-items center
		width 100%
		height 100%
		overflow hidden
	&__card-gallery-img
		max-width 100%
		max-height 100%
	&__card-gallery-thumbs
		width 100%
		height 78px
		@media $mLandscapeMax
			height 58px
		@media $mPortraitMax
			height 52px
		& ^[0]__card-gallery-overimg
			border-radius 2px
	&__card-content
		padding-left 24px
		@media $tPortraitMax
			padding-left 0
	&__card-content-rows
		display flex
		flex-direction column
		row-gap 27px
		@media $desktopMax
			row-gap 20px
		@media $mPortraitMax
			row-gap 9px
	&__card-content-row
		padding-bottom 24px
		border-bottom 1px solid $border-gray
		@media $desktopMax
			padding-bottom 20px
		@media $mPortraitMax
			padding-bottom 9px
		&:last-child
			padding-bottom 0
			border-bottom none
	&__card-title
		color $default
		font-size 24px
		line-height 27px
		font-weight bold
		margin-top -4px
		margin-bottom 22px
		@media $tPortraitMax
			display none
		@media $mLandscapeMax
			margin-top 0
			margin-bottom 12px
			font-size 20px
			line-height 24px
			font-weight bold
		&--mobile
			display none
			@media $tPortraitMax
				display block
	&__card-items
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-template-rows auto
		align-items flex-end
		gap 24px 48px
		@media $desktopMax
			gap 24px
		@media $mPortraitMax
			grid-template-columns repeat(2, 1fr)
			gap 8px 12px
	&__card-item-title
		margin-bottom 5px
		color #8c8c8c
		font-size 14px
		line-height 17px
		@media $mLandscapeMax
			margin-bottom 2px
			font-size 10px
			line-height 12px
	&__card-item-data
		color $accent
		font-size 30px
		line-height 34px
		font-weight 700
		@media $desktopMax
			font-size 24px
			line-height 30px
		@media $mLandscapeMax
			font-size 16px
			line-height 19px
		span
			margin-left 8px
			color $default
			font-size 18px
			line-height 24px
			@media $mLandscapeMax
				font-size 10px
				line-height 19px
	&__card-props
		display grid
		grid-template-columns repeat(2, minmax(0, 1fr))
		grid-template-rows auto
		gap 10px 62px
		@media $desktopMax
			grid-template-columns repeat(2, 1fr)
			gap 10px 24px
		@media $mLandscapeMax
			grid-template-columns auto
			gap 8px 12px
		@media $mPortraitMax
			gap 0
	&__card-prop
		display flex
		width 100%
	&__card-prop-title,
	&__card-prop-data
		font-size 16px
		line-height 20px
		@media $mLandscapeMax
			font-size 14px
			line-height 18px
	&__card-prop-title
		color #8c8c8c
		padding-right 4px
	&__card-prop-data
		font-weight 600
		word-break break-word
	&__card-video
		display flex
		align-items flex-start
		grid-column-gap 24px
		width 100%
		@media $mPortraitMax
			flex-direction column
			grid-column-gap 0
			grid-row-gap 12px
			padding-top 8px
	&__card-video-item
		display flex
		flex-shrink 0
		position relative
		width 228px
		height 124px
		background-repeat no-repeat
		background-position center
		background-size cover
		border-radius 7px
		overflow hidden
		@media $desktopMax
			width 226px
			height 122px
		@media $mPortraitMax
			width 100%
			height auto
			padding-top 50.34%
		&:before,
		&:after
			@extend .psElem
			position absolute
			pointer-events none
		&:before
			left 0
			top 0
			width 100%
			height 100%
			background-color rgba(#000, .7)
			z-index 1
		&:after
			left 8px
			bottom 6px
			width 208px
			height 14px
			background url('data:image/png;base64,') no-repeat center
			z-index 2
			@media $mPortraitMax
				width 100%
				left 9px
				bottom 7px
				height 67px
				max-width calc(100% - 18px)
				background-image url('data:image/png;base64,')
				background-position left bottom
				background-size contain
		span
			display flex
			width 44px
			height 44px
			margin auto
			border-radius 22px
			background-color $white
			z-index 3
			@media $mPortraitMax
				position absolute
				top 50%
				left 50%
				width 56px
				height 56px
				transform translate(-50%, calc(-50% - 8px))
				border-radius 28px
			&:before
				content ''
				display block
				width 0
				height 0
				margin auto
				border-style solid
				border-width 5.5px 0 5.5px 9px
				border-color transparent transparent transparent $accent
				transform translateX(2px)
				@media $mLandscapeMax
					border-width 9.5px 0 9.5px 13px
					transform translateX(2px)
	&__card-video-text
		position relative
		color #959595
		font-size 14px
		line-height 17px
		&:after
			@extend .psElem
			position absolute
			left 0
			top calc(100% + 8px)
			width 66px
			height 32px
			background url('data:image/png;base64,') no-repeat center
			@media $mPortraitMax
				content none
				display none
		span
			display -webkit-box
			-webkit-line-clamp 5
			-webkit-box-orient vertical
			text-overflow ellipsis
			overflow hidden
		a
			color $accent
			font-weight 600
			border-bottom 1px solid $accent
			transition border $duration
			&:hover
				border-bottom-color transparent

