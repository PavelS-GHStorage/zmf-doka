.section-articles
	padding 45px 0 54px
	&__container
		@extend .container
	&__head
		margin-bottom 51px
	&__all-link
		display inline-block
		vertical-align middle
		flex-shrink 0
		margin-top 15px
		color #767676
		font-size 14px
		line-height 16px
		border-bottom 1px solid #767676
		transition border $duration
		&:hover
			border-bottom-color transparent
	&__items
		display grid
		grid-template-columns repeat(4, 1fr)
		grid-template-rows repeat(2, 1fr)
		gap 24px
	&__item
		&:first-child
			grid-area 1 / 1 / 3 / 3
		&:nth-child(2)
			grid-area 1 / 3 / 1 / 3
		&:nth-child(3)
			grid-area 1 / 4 / 1 / 4
		&:nth-child(4)
			grid-area 2 / 3 / 2 / 5
	&__item-card
		display flex
		align-items flex-end
		position relative
		width 100%
		height 284px
		background-repeat no-repeat
		background-size cover
		border-radius 20px
		overflow hidden
		z-index 1
		&:after
			@extend .psElem
			position absolute
			left 0
			bottom 0
			width 100%
			height 60%
			background-image linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 100%)
			background-repeat no-repeat
			background-position 0 100%
			background-size 100%
			pointer-events none
			z-index -1
		&--big
			height 100%
			& ^[0]__item-card-title
				font-size 24px
				line-height 27px
		&--big,
		&--middle
			& ^[0]__item-card-title
				min-height auto
	&__item-card-content
		display flex
		flex-direction column
		align-items flex-start
		position relative
		width 100%
		padding 25px 25px 25px 21px
		z-index 1
	&__item-card-type
		margin-bottom 18px
		padding 6px 16px
		color #fff
		font-size 10px
		line-height 12px
		text-transform uppercase
		background-color $accent
		border-radius 12px
	&__item-card-title
		display -webkit-box
		-webkit-line-clamp 2
		-webkit-box-orient vertical
		min-height 44px
		margin-bottom 44px
		color #fff
		font-size 18px
		line-height 22px
		font-weight 500
		overflow hidden
	&__item-card-date
		display block
		color #fff
		font-size 11px
		line-height 13px
		text-transform uppercase
	&--page
		padding-top 7px
		& ^[0]__items
			display grid
			grid-template-columns repeat(4, 1fr)
			grid-template-rows auto
			gap 24px
		& ^[0]__item
			&:first-child
				grid-area 1 / 1 / 3 / 3
			&:nth-child(2)
				grid-area 1 / 3 / 1 / 3
			&:nth-child(3)
				grid-area 1 / 4 / 1 / 4
			&:nth-child(4)
				grid-area 2 / 3 / 2 / 5
			&:nth-child(5)
				grid-area 3 / 1 / 3 / 3
			&:nth-child(6)
				grid-area 3 / 3 / 3 / 3
			&:nth-child(7)
				grid-area 3 / 4 / 3 / 4
