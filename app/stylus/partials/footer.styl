.footer
	padding 52px 0
	background-color #2c2c2c
	&__container
		@extend .container
	&__columns
		display flex
		gap 130px
		@media $tPortraitMax
			display grid
			grid-template-columns repeat(2, 1fr)
			grid-template-rows auto
			gap 32px 24px
			@media $mLandscapeMax
				grid-template-columns auto
				gap 32px 12px
	&__column
		max-width 290px
		min-width 136px
		@media $tPortraitMax
			max-width none
			min-width auto
		&--about
			max-width 230px
			@media $tPortraitMax
				max-width none
	&__column-title
		margin-bottom 8px
		color #c4c4c4
		font-size 14px
		font-weight 600
		line-height 16px
	&__column-content
		display flex
		flex-direction column
		align-items flex-start
		gap 12px
	&__logo
		margin-bottom 6px
	&__text
		color #c4c4c4
		font-size 12px
		line-height 16px
	&__privacy-policy
		margin-top 5px
		color #c4c4c4
		font-size 12px
		line-height 16px
		font-weight 500
		transition color $duration
		span
			border-bottom 1px solid #c4c4c4
			transition color border $duration
		&:hover
			color $white
			span
				border-bottom-color transparent
	&__list-item
		margin-bottom 8px
		color #c4c4c4
		font-size 14px
		line-height 16px
		a[href^="tel:"],
		a[href^="mailto:"]
			color #c4c4c4
			transition color $duration, border $duration
			&:hover
				color $white
		a[href^="tel:"]
			font-weight bold
			white-space nowrap
		a[href^="mailto:"]
			border-bottom 1px solid #c4c4c4
			&:hover
				color $white
				border-bottom-color transparent
	&__list-item-link
		color #c4c4c4
		transition color $duration
		&:hover
			color $white
	&__city
		position relative
	&__city-togglle
		padding-right 20px
		color #c4c4c4
		font-size 14px
		line-height 16px
	&__city-dropdown
		position absolute
		opacity 0
		visibility hidden
		padding 20px
		background-color #a5a5a5
		border-radius 12px
	&__city-button
		color #c4c4c4
		font-size 14px
		line-height 16px
		&--selected
			font-weight bold
